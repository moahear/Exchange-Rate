<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="16dp"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MarketActivity">
<ImageView
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/img"
    android:layout_width="32dp"
    android:layout_height="32dp"
    app:layout_constraintStart_toStartOf="parent"

    />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img"
        android:id="@+id/txt_coin_name"
        android:layout_marginStart="12dp"
        style="@style/CoinBitText.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC"
        />
    <TextView
        app:layout_constraintStart_toEndOf="@id/txt_coin_name"
        app:layout_constraintTop_toTopOf="@id/txt_coin_name"
        android:id="@+id/txt_dollar"
        android:layout_marginStart="8dp"
        style="@style/CoinBitText.Body1Alternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USDT"
        />
    <TextView
        app:layout_constraintStart_toStartOf="@id/txt_coin_name"
        app:layout_constraintTop_toBottomOf="@id/txt_coin_name"
        android:id="@+id/txt_change"
        android:layout_marginTop="4dp"
        style="@style/CoinBitText.Body1Alternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CoinBase"
        />
    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_coin_name"
        android:id="@+id/txt_price"
        android:layout_marginStart="8dp"
        style="@style/CoinBitText.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3,180"
        />
    <TextView
        app:layout_constraintEnd_toEndOf="@id/txt_price"
        app:layout_constraintTop_toBottomOf="@id/txt_price"
        android:id="@+id/txt_market_cap"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        style="@style/CoinBitText.Body1Alternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$2.4 million"
        />
</androidx.constraintlayout.widget.ConstraintLayout>